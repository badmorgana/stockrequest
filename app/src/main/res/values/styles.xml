<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.StockRequest" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/coral_orange</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.StockRequest.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.StockRequest.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.StockRequest.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.StockRequest.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.StockRequest.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.StockRequest.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.StockRequest.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.StockRequest.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.StockRequest.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.StockRequest.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.StockRequest.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.StockRequest.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.StockRequest.Overline</item>
    </style>

    <!-- ToolBar Style -->
    <style name="Theme.StockRequest.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.StockRequest.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Typography styles using Styrene for headings and Tiempos for body text -->

    <!-- Styrene for Headings -->
    <style name="TextAppearance.StockRequest.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/styrene_bold</item>
        <item name="android:fontFamily">@font/styrene_bold</item>
        <item name="android:textSize">96sp</item>
    </style>

    <style name="TextAppearance.StockRequest.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/styrene_bold</item>
        <item name="android:fontFamily">@font/styrene_bold</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="TextAppearance.StockRequest.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/styrene_bold</item>
        <item name="android:fontFamily">@font/styrene_bold</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="TextAppearance.StockRequest.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/styrene_medium</item>
        <item name="android:fontFamily">@font/styrene_medium</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.StockRequest.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/styrene_medium</item>
        <item name="android:fontFamily">@font/styrene_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.StockRequest.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/styrene_medium</item>
        <item name="android:fontFamily">@font/styrene_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Tiempos for Body text -->
    <style name="TextAppearance.StockRequest.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/tiempos_regular</item>
        <item name="android:fontFamily">@font/tiempos_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.StockRequest.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/tiempos_semibold</item>
        <item name="android:fontFamily">@font/tiempos_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.StockRequest.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/tiempos_regular</item>
        <item name="android:fontFamily">@font/tiempos_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.StockRequest.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/tiempos_regular</item>
        <item name="android:fontFamily">@font/tiempos_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.StockRequest.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/tiempos_regular</item>
        <item name="android:fontFamily">@font/tiempos_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.StockRequest.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/styrene_medium</item>
        <item name="android:fontFamily">@font/styrene_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.StockRequest.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/styrene_regular</item>
        <item name="android:fontFamily">@font/styrene_regular</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>